                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>l10n-maven-plugin</artifactId>
                        <version>1.0-alpha-2</version>
                        <configuration>
                            <locales>
                                <locale>de</locale>
                                <locale>pt_BR</locale>
                                <locale>sv</locale>
                            </locales>
                        </configuration>
                    </plugin>
                </plugins>
            </reporting>
        </profile>
